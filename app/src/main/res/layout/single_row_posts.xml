<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/postsCardContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/minDimen"
    card_view:cardCornerRadius="@dimen/minDimen"
    card_view:cardElevation="4dp"
    card_view:contentPadding="@dimen/minDimen"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/minDimen"
        android:layout_marginEnd="@dimen/minDimen"
        android:layout_marginStart="@dimen/minDimen"
        android:layout_marginTop="@dimen/minDimen">

        <TextView
            android:id="@+id/postsTitleTxtV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:gravity="start|left"
            android:textAllCaps="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>


        <TextView
            android:id="@+id/postsDescTxtV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/minDimen"
            android:layout_marginRight="@dimen/minDimen"
            android:ellipsize="end"
            android:gravity="start|left"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_toLeftOf="@+id/arrowRtImgV"
            android:layout_toStartOf="@+id/arrowRtImgV"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/postsTitleTxtV"
            android:layout_marginTop="@dimen/minDimen"/>


        <ImageView
            android:id="@+id/arrowRtImgV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/minDimen"
            android:layout_marginTop="@dimen/minDimen"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>